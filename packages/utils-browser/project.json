{
  "name": "utils-browser",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils-browser/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/utils-browser/**/*.ts"]
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/utils-browser",
        "main": "packages/utils-browser/src/index.ts",
        "tsConfig": "packages/utils-browser/tsconfig.lib.json",
        "assets": ["packages/utils-browser/*.md"],
        "generatePackageJson": true
      },
      "dependsOn": ["lint"]
    },
    "release": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx semantic-release --extends=./packages/utils-browser/release.config.js"
          }
        ]
      },
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
