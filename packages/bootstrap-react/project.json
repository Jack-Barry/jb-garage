{
  "name": "bootstrap-react",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/bootstrap-react/src",
  "projectType": "library",
  "targets": {
    "clean:repos": {
      "executor": "nx:run-commands",
      "outputs": ["packages/bootstrap-react/repos/bootstrap"],
      "options": {
        "cwd": "packages/bootstrap-react",
        "commands": ["shx rm -rf repos/bootstrap"]
      }
    },
    "setup:dev": {
      "executor": "nx:run-commands",
      "outputs": ["packages/bootstrap-react/repos/bootstrap"],
      "options": {
        "cwd": "packages/bootstrap-react",
        "commands": [
          "git clone --depth 1 --branch v5.3.0 https://github.com/twbs/bootstrap.git repos/bootstrap"
        ]
      },
      "dependsOn": ["clean:repos"]
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/bootstrap-react/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": ["setup:dev"]
    },
    "storybook:build": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/bootstrap-react",
        "configDir": "packages/bootstrap-react/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": ["build", "setup:dev"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/bootstrap-react/**/*.ts"]
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/bootstrap-react",
        "main": "packages/bootstrap-react/src/index.ts",
        "tsConfig": "packages/bootstrap-react/tsconfig.lib.json",
        "assets": ["packages/bootstrap-react/*.md"],
        "generatePackageJson": true
      },
      "dependsOn": ["lint", "setup:dev"]
    },
    "release": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx semantic-release --extends=./packages/bootstrap-react/release.config.js"
          }
        ]
      },
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
