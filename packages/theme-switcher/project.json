{
  "name": "theme-switcher",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/theme-switcher/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/theme-switcher/**/*.ts"]
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/theme-switcher",
        "main": "packages/theme-switcher/src/index.ts",
        "tsConfig": "packages/theme-switcher/tsconfig.lib.json",
        "assets": ["packages/theme-switcher/*.md"],
        "generatePackageJson": true,
        "additionalEntryPoints": [
          "packages/theme-switcher/scripts/setThemeOnLoad.ts",
          "packages/theme-switcher/scripts/setup.ts"
        ],
        "minify": true
      },
      "dependsOn": ["lint"]
    },
    "release": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx semantic-release --extends=./packages/theme-switcher/release.config.js"
          }
        ]
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/theme-switcher/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
